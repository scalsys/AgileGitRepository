<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="IdeaCreationSessionFactory">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/exo_platform_idm</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <mapping package="org.scalsys.agile.model" />
  <mapping class="org.scalsys.agile.model.Idea"/>
  <mapping class="org.scalsys.agile.model.Contest" />
  <mapping class="org.scalsys.agile.model.IdeaCategory" />
  <mapping class="org.scalsys.agile.model.IdeaDescriptorFile" />
  <mapping class="org.scalsys.agile.model.IdeaSubcategory" />
  <mapping class="org.scalsys.agile.model.IdeaType" />
  <mapping class="org.scalsys.agile.model.IdeaVote" />
  <!-- <mapping class="org.scalsys.agile.model.TestPojo" /> -->
 </session-factory>
</hibernate-configuration>
